@model IEnumerable<MVC_Portal.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<p>
    <button type="button" class="btn btn-primary" onclick="openCreateForm()">Create New</button>
</p>

<div class="tableOuter">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th style="width:10%">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th style="width:8%">
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th style="width:8%">
                    @Html.DisplayNameFor(model => model.WorkingArea)
                </th>
                <th style="width:8%">
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th style="width:6%">
                    @Html.DisplayNameFor(model => model.Grade)
                </th>
                <th style="width:8%">
                    @Html.DisplayNameFor(model => model.OpeningAmount)
                </th>
                <th style="width:8%">
                    @Html.DisplayNameFor(model => model.ReceivedAmount)
                </th>
                <th style="width:8%">
                    @Html.DisplayNameFor(model => model.PaymentAmount)
                </th>
                <th style="width:8%">
                    @Html.DisplayNameFor(model => model.OutstandingAmount)
                </th>
                <th style="width:8%">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th style="width:8%">
                    @Html.DisplayNameFor(model => model.AgentCode)
                </th>
                <th style="width:14%"> Action </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkingArea)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OpeningAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReceivedAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OutstandingAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AgentCode)
                    </td>
                    <td class="d-flex justify-content-center">
                        @Html.ActionLink("Edit", "Edit", new { id = item.CustomerCode } , new {@Class = "btn btn-info me-1" })
                        @Html.ActionLink("Details", "Details", new { id = item.CustomerCode }, new { @Class = "btn btn-warning mx-1" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.CustomerCode }, new { @Class = "btn btn-danger ms-1" })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

<script>

    function openCreateForm() {
        window.location.href = "@Url.Action("Create", "Customers")";
    }

</script>

